                          asp-route-minArea="@Model.Pagination.MinArea" asp-route-maxArea="@Model.Pagination.MaxArea"
                          asp-route-minPrice="@Model.Pagination.MinPrice" asp-route-maxPrice="@Model.Pagination.MaxPrice"
