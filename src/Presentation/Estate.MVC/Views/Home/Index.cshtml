                            <input placeholder="Max Area" type="number" name="maxArea" value="@(Model.Pagination.MaxArea == null? 0:Model.Pagination.MaxArea)" style="width:90%;" class="form-control">
                        </form>
                    </div>
                </div>
                <div class="form-group width-2">
