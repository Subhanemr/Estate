@model GetBlogVM

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-3 m-1 w-50">

        <div class="col">
            <div class="card">
                <p class="card-text fw-bold m-2">Main Image</p>
                <img src="@Model.Images.FirstOrDefault(p => p.IsPrimary == true).Url" class="img-fluid rounded-start" alt="@Model.Name">
            </div>
        </div>

        @foreach (var productImage in Model.Images.Where(p => p.IsPrimary == null))
        {
            <div class="col">
                <div class="card ">
                    <p class="card-text fw-bold m-2">Other Images</p>
                    <img src="@productImage.Url" class="img-fluid rounded-start" alt="@Model.Name">
                </div>
            </div>
        }
    </div>
    <div class="card-body m-2">
        <h5 class="card-title">Name: @Model.Name</h5>
        <p class="card-text">Description: @Model.Description</p>
        <p class="card-text">Create By: @Model.CreatedBy</p>
        <p class="card-text">Create Date: @Model.CreateAt.ToString("dd,MMMM,yyyy")</p>
        <p class="card-text">Facebook: <a href="@(Model.FaceLink != null ? Model.FaceLink : "")">@(Model.FaceLink != null ? Model.FaceLink : "N/A")</a> </p>
        <p class="card-text">Twitter: <a href="@(Model.TwitLink != null ? Model.TwitLink : "")">@(Model.TwitLink != null ? Model.TwitLink : "N/A")</a> </p>
        <p class="card-text">GoogleLink: <a href="@(Model.GoogleLink != null ? Model.GoogleLink : "")">@(Model.GoogleLink != null ? Model.GoogleLink : "N/A")</a> </p>
        <p class="card-text">Linked-In: <a href="@(Model.LinkedLink != null ? Model.LinkedLink : "")">@(Model.LinkedLink != null ? Model.LinkedLink : "N/A")</a> </p>
        <p class="card-text">Instagram: <a href="@(Model.InstaLink != null ? Model.InstaLink : "")">@(Model.InstaLink != null ? Model.InstaLink : "N/A")</a> </p>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    User Image
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Comment
                                </th>
                                <th>
                                    Comment Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model.Commnets)
                                {
                                    <td>
                                        <img src="@item.AppUser.Img" alt="@item.AppUser.UserName">
                                    </td>
                                    <td>
                                        @item.AppUser.UserName
                                    </td>
                                    <td>
                                        @item.Comment
                                    </td>
                                    <td>
                                        @item.CreateAt.ToString("dd,MMMM,yyyy")
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Product">Back</a>
