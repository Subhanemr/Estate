@model UpdateBlogVM

@{
    var main = Model.Images.FirstOrDefault(pi => pi.IsPrimary == true);
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Corporate</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FaceLink">Facebook</label>
                    <input asp-for="FaceLink" class="form-control" placeholder="Facebook">
                    <span asp-validation-for="FaceLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitLink">Twitter</label>
                    <input asp-for="TwitLink" class="form-control" placeholder="Twitter">
                    <span asp-validation-for="TwitLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GoogleLink">Google Plus</label>
                    <input asp-for="GoogleLink" class="form-control" placeholder="Google Plus">
                    <span asp-validation-for="GoogleLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkedLink">Linked-In</label>
                    <input asp-for="LinkedLink" class="form-control" placeholder="Linked-In">
                    <span asp-validation-for="LinkedLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstaLink">Instagram</label>
                    <input asp-for="InstaLink" class="form-control" placeholder="Instagram">
                    <span asp-validation-for="InstaLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img src="@main.Url" width="25%">
                    <input hidden="hidden" asp-for="MainPhoto" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="MainPhoto">Image</label>
                    <input asp-for="MainPhoto" class="form-control" accept="image/*" placeholder="Image">
                    <span asp-validation-for="MainPhoto" class="text-danger"></span>
                </div>
                <div class="form-group d-flex container row">
                    @foreach (var productImage in Model.Images.Where(pi => pi.IsPrimary == null))
                    {
                        <div class="position-relative m-3 col-3">
                            <img src="@productImage.Url" width="150px" height="200px" />
                            <button type="button" style="left:13px; top:2px;" class="cus-delete btn btn-danger opacity-50 text-white position-absolute">X</button>
                            <input asp-for="ImageIds" value="@productImage.Id" type="hidden" class="form-control">
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Photos">Other Images</label>
                    <input asp-for="Photos" class="form-control" placeholder="Images" accept="image/*">
                    <span asp-validation-for="Photos" class="text-danger"></span>
                </div>
                <div class="form-group border border-primary">
                    <textarea asp-for="Description" class="form-control" rows="12" placeholder="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" asp-controller="Corporate" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section DeleteImages{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".cus-delete").forEach(function (btn) {
                btn.addEventListener("click", function () {
                    btn.parentElement.remove();
                });
            });
        });
    </script>
}
