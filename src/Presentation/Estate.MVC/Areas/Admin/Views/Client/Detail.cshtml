@model GetClientVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                User Image
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Corporate Image
                            </th>
                            <th>
                                Corporate Name
                            </th>
                            <th>
                                Comment
                            </th>
                            <th>
                                Country
                            </th>
                            <th>
                                Specialty
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="@Model.AppUser.Img" alt="@Model.AppUser.UserName">
                            </td>
                            <td>
                                @Model.AppUser.UserName
                            </td>
                            <td>
                                <img src="@Model.Corporate.Img" alt="@Model.Corporate.Name">
                            </td>
                            <td>
                                @Model.Corporate.Name
                            </td>
                            <td>
                                @Model.Comment
                            </td>
                            <td>
                                @Model.Country
                            </td>
                            <td>
                                @Model.Specialty
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Client">Back</a>
