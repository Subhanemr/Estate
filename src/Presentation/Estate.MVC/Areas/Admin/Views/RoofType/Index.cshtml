@model PaginationVM<ItemRoofTypeVM>

@{
    int count = (Model.CurrentPage - 1) * Model.Take;
}

<div class="d-flex justify-content-end">
    <div class="input-group mx-3">
        <form asp-action="Index" asp-controller="RoofType"
              asp-route-order="@Model.Order">
            <input type="text" class="form-control" placeholder="Search now" name="search" value="@(Model.Search == null? "":Model.Search)">
        </form>
    </div>
    <form asp-action="Index" asp-controller="RoofType"
          asp-route-order="@Model.Search" class="my-2 ">
        <select class="form-control form-control-sm rounded-1" onchange="this.form.submit()" name="Order">
            <option selected disabled>Sort by Default</option>
            <option value="1">Name</option>
            <option value="2">Created at</option>
            <option value="3">Name by Descending</option>
            <option value="4">Created at by Descending</option>
        </select>
    </form>
    <a asp-controller="RoofType" asp-action="DeletedItems" class="btn btn-danger fw-bold fs-6 text-white w-25 m-2">Deleted Roof Types</a>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Roof Types table</h4>
            <a asp-controller="RoofType" asp-action="Create" class="btn btn-warning fw-bold fs-6 text-white">Create Roof Type</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Products
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var RoofType in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @RoofType.Name
                                </td>
                                <td>
                                    @RoofType.Products.Count
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="RoofType" asp-route-id="@RoofType.Id" class="btn btn-primary btn-info">
                                        <i class="mdi mdi-pencil text-white"></i>
                                    </a>
                                    @if (User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Member.ToString()))
                                    {
                                        <a asp-action="SoftDelete" asp-controller="RoofType" asp-route-id="@RoofType.Id" class="btn btn-danger btn-info">
                                            <i class="mdi mdi-delete text-white"></i>
                                        </a>
                                    }
                                    <a asp-action="Detail" asp-controller="RoofType" asp-route-id="@RoofType.Id" class="btn  btn-primary">
                                        <i class="mdi mdi-open-in-new text-white"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")"><a class="page-link" asp-route-page="@(Model.CurrentPage -1)" asp-action="Index" asp-controller="RoofType">Previous</a></li>
                    @for (int i = 0; i < Model.TotalPage; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")"><a asp-action="Index" asp-route-page="@i" asp-controller="RoofType" class="page-link">@(i + 1)</a></li>
                    }
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPage ? "disabled" : "")"><a class="page-link" asp-route-page="@(Model.CurrentPage +1)" asp-action="Index" asp-controller="RoofType">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>