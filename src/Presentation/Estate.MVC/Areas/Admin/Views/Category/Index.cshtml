@model PaginationVM<ItemCategoryVM>

@{
    int count = (Model.CurrentPage - 1) * 10;
}
<div class="input-group mx-3">
    <form asp-action="Index" asp-controller="Category"
          asp-route-order="@Model.Order">
        <input type="text" class="form-control" placeholder="Search now" name="search" value="@(Model.Search == null? "":Model.Search)">
    </form>
</div>
<div class="dropdown py-2">
    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Sort by Default
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" asp-action="Index" asp-controller="Category"
               asp-route-order="1" asp-route-search="@Model.Search">Name</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-controller="Category"
               asp-route-order="2" asp-route-search="@Model.Search">Created at</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-controller="Category"
               asp-route-order="3" asp-route-search="@Model.Search">Descending by Name</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-controller="Category"
               asp-route-order="4" asp-route-search="@Model.Search">Descending by Created at</a>
        </li>
    </ul>
</div>
<div class="d-flex justify-content-end">

<a asp-controller="Category" asp-action="DeletedItems" class="btn btn-danger fw-bold fs-6 text-white w-25 m-2">Delete Categories</a>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories table</h4>
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning fw-bold fs-6 text-white">Create Category</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var category in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/images//@category.Img" alt="@category.Name">
                                </td>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    @category.Products.Count
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-primary btn-info">
                                        <i class="mdi mdi-pencil text-white"></i>
                                    </a>
                                    @if (User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Member.ToString()))
                                    {
                                        <a asp-action="SoftDelete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger btn-info">
                                            <i class="mdi mdi-delete text-white"></i>
                                        </a>
                                    }
                                    <a asp-action="More" asp-controller="Category" asp-route-id="@category.Id" class="btn  btn-primary">
                                        <i class="mdi mdi-open-in-new text-white"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage -1 == 0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-2)" asp-action="Index" asp-controller="Category">Previous</a></li>
                    @for (int i = 0; i < Model.TotalPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage-1?"disabled":"")"><a asp-action="Index" asp-route-page="@(i)" asp-controller="Category" class="page-link">@(i + 1)</a></li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPage?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage)" asp-action="Index" asp-controller="Category">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>