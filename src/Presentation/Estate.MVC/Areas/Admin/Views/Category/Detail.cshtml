@model GetCategoryVM

<div class="container">
    <h3 class="fw-bold m-3">@Model.Name Products</h3>
    <h4 class="fw-normal mx-5 my-3">Product Count: @Model.Products.Count</h4>
</div>
<div class="container">
    <img src="@Model.Img" class="w-25">
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model.Products)
    {
        <div class="col">
            <div class="card bg-secondary">
                <img src="@product.Images.FirstOrDefault(pi => pi.IsPrimary == true).Url"
                     alt="@product.Name" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title text-white">Name: @product.Name</h5>
                    <p class="card-text text-white">Description: @product.Description</p>
                    <p class="card-text text-white">Price: $@product.Price</p>
                    <p class="card-text text-white">Area: @product.Area</p>
                    <p class="card-text text-white">Lot Size: @product.LotSize</p>

                    <p class="card-text text-white">Bedrooms: @product.Bedrooms</p>
                    <p class="card-text text-white">Bathrooms: @product.Bathrooms</p>
                    <p class="card-text text-white">Garages: @product.Garages</p>
                    <p class="card-text text-white">YearBuilt: @product.YearBuilt</p>
                    <p class="card-text text-white">Room Count: @product.RoomCount</p>
                    <p class="card-text text-white">Garages: @product.Garages</p>

                    <p class="card-text text-white">Category: @Model.Products.FirstOrDefault().Category.Name</p>
                    @if (product.SchoolDistrict != null)
                    {
                        <p class="card-text text-white">School District: @product.SchoolDistrict</p>
                        <p class="card-text text-white">School District Phone: @product.SchoolDistrictPhone</p>
                        <p class="card-text text-white">High School: @(product.HighSchool != true ? product.HighSchool : "N/A")</p>
                        <p class="card-text text-white">Middle School: @(product.MiddleSchool != true ? product.MiddleSchool : "N/A")</p>
                        <p class="card-text text-white">Elementary School: @(product.ElementarySchool != true ? product.ElementarySchool : "N/A")</p>
                    }
                    <p class="card-text text-white">Facebook: <a href="@(product.FaceLink != null ? product.FaceLink : "")">@(product.FaceLink != null ? product.FaceLink : "N/A")</a> </p>
                    <p class="card-text text-white">Twitter: <a href="@(product.TwitLink != null ? product.TwitLink : "")">@(product.TwitLink != null ? product.TwitLink : "N/A")</a> </p>
                    <p class="card-text text-white">GoogleLink: <a href="@(product.GoogleLink != null ? product.GoogleLink : "")">@(product.GoogleLink != null ? product.GoogleLink : "N/A")</a> </p>
                </div>
            </div>
        </div>
    }
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Category" asp-route-returnUrl="@ViewData["ReturnUrl"]">Back</a>