@model GetCategoryVM

<div class="container">
    <h3 class="fw-bold m-3">@Model.Name Products</h3>
    <h4 class="fw-normal mx-5 my-3">Product Count: @Model.Products.Count</h4>
</div>
<div class="card-group">
    @foreach (var product in Model.Products)
    {
        <div class="card m-1 bg-primary text-white rounded-3">
            <img src="~/assets/images/website-images/@product.Images.FirstOrDefault(pi => pi.IsPrimary == true).Url"
                 alt="@product.Name" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title text-white">Name: @product.Name</h5>
                <p class="card-text">Description: @product.Description</p>
                <p class="card-text">Price: $@product.Price</p>
                <p class="card-text">Area: $@product.Area</p>

                <p class="card-text">Bedrooms: $@product.Bedrooms</p>
                <p class="card-text">Bathrooms: $@product.Bathrooms</p>
                <p class="card-text">Garages: $@product.Garages</p>
                <p class="card-text">YearBuilt: $@product.YearBuilt</p>
                <p class="card-text">Room Count: $@product.RoomCount</p>
                <p class="card-text">Garages: $@product.Garages</p>
                @if (product.SchoolDistrict != null)
                {
                    <p class="card-text">School District: $@product.SchoolDistrict</p>
                    <p class="card-text">School District Phone: $@product.SchoolDistrictPhone</p>
                    <p class="card-text">High School: $@(product.HighSchool != true ? product.HighSchool : "N/A")</p>
                    <p class="card-text">Middle School: $@(product.MiddleSchool != true ? product.MiddleSchool : "N/A")</p>
                    <p class="card-text">Elementary School: $@(product.ElementarySchool != true ? product.ElementarySchool : "N/A")</p>
                }
                <p class="card-text">High School: $@(product.FaceLink != null ? product.FaceLink : "N/A")</p>
                <p class="card-text">Middle School: $@(product.TwitLink != null ? product.TwitLink : "N/A")</p>
                <p class="card-text">Elementary School: $@(product.GoogleLink != null ? product.GoogleLink : "N/A")</p>
                <p class="card-text">Lot Size: @product.LotSize</p>
            </div>
        </div>
    }
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Category">Back</a>